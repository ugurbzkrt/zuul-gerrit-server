[sshd]
  listenAddress = *:29418

[cache]
  directory = cache

[plugins]
  allowRemoteAdmin = true

[sendemail]
  smtpServer = localhost

[receive]
  enableSignedPush = false

[ldap]
  server = ldap://ldap.oobeya.io:389
  username = cn=admin,dc=computingforgeeks,dc=com
  password = Admin!12*
  accountBase = ou=Users,dc=computingforgeeks,dc=com
  groupBase = ou=Users,dc=computingforgeeks,dc=com
  accountPattern = (&(|(objectClass=person)(objectClass=inetOrgPerson))(cn=${username}))
  referral = follow
  sslVerify = false

[account]
  fullName = ldap
  email = ldap
