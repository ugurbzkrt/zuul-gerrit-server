[gerrit]
  basePath = git
        canonicalWebUrl = http://3.71.36.221:8080
        serverId = 355c7bef-1edd-4792-80b9-fae338f8f221

[index]
  type = LUCENE

[auth]
  type = LDAP
  # Git/HTTPS parolası için birini seç:
  gitBasicAuthPolicy = HTTP ; UI->HTTP Credentials token zorunlu olsun
 # gitBasicAuthPolicy = LDAP ; LDAP ?~_ifresiyle Git Basic Auth kabul et

[httpd]
  listenUrl = http://*:8080/

# ?~^UNLARI SİL (gerekli de?~_il ve sorun çıkarır):
